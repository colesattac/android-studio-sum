<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#353535"
        android:gravity="center"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="292dp"
        android:layout_height="94dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/lab"
        app:srcCompat="@drawable/lab1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/a"
            android:textColor="@color/lightgrey" />

        <EditText
            android:id="@+id/editText_a"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:autofillHints="no"
            android:ems="10"
            android:hint="@string/a"
            android:inputType="textPersonName"
            android:textColor="@color/lightgrey"
            android:textColorHint="@color/grey"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/b"
            android:textColor="@color/lightgrey" />

        <EditText
            android:id="@+id/editText_b"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:autofillHints="no"
            android:hint="@string/b"
            android:inputType="textPersonName"
            android:textColor="@color/lightgrey"
            android:textColorHint="@color/grey"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/c"
            android:textColor="@color/lightgrey" />

        <EditText
            android:id="@+id/editText_c"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/c"
            android:inputType="textPersonName"
            android:textColor="@color/lightgrey"
            android:textColorHint="@color/grey"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/d"
            android:textColor="@color/lightgrey" />

        <EditText
            android:id="@+id/editText_d"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/d"
            android:inputType="textPersonName"
            android:textColor="@color/lightgrey"
            android:textColorHint="@color/grey"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/x"
            android:textColor="@color/lightgrey" />

        <EditText
            android:id="@+id/editText_x"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/x"
            android:inputType="textPersonName"
            android:textColor="@color/lightgrey"
            android:textColorHint="@color/grey"
            tools:ignore="TextContrastCheck,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSum"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#F5A011"
        android:onClick="onClick"
        android:text="@string/sum"
        android:textColor="#37474F" />

    <TextView
        android:id="@+id/textView_sum"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/button_name"
        android:textColor="@color/lightgrey" />


</LinearLayout>